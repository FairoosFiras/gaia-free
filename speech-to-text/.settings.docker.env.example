# Speech-to-Text Service Environment Variables for Docker
# Copy this to .settings.docker.env and customize as needed

ENVIRONMENT_NAME=development

# Audio storage configuration
AUDIO_STORAGE_PATH=/app/audio_storage

# Service host and port
STT_SERVICE_HOST=0.0.0.0
STT_SERVICE_PORT=8001

# Service name and version
STT_SERVICE_NAME=Speech-to-Text Service
STT_SERVICE_VERSION=1.0.0

# Audio processing settings
STT_DEFAULT_SAMPLE_RATE=48000
STT_CHUNK_SIZE=16384

# Voice activity detection parameters (in milliseconds)
STT_VOICE_ACTIVITY_DURATION_MS=1000
STT_SILENCE_THRESHOLD_MS=2000
STT_MAX_BUFFER_CHUNKS=750

# Log level (DEBUG, INFO, WARNING, ERROR)
STT_LOG_LEVEL=INFO

# Auth0 Configuration (public values - not secrets)
AUTH0_DOMAIN=dev-XXXX.us.auth0.com
AUTH0_AUDIENCE=https://XXX.XX.ai
