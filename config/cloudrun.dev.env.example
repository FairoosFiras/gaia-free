# Non-sensitive environment config for local development
# Copy to cloudrun.dev.env and update values
# Or run `make setup-private` if you have access to gaia-private

ENV=dev
ENVIRONMENT=development
ENVIRONMENT_NAME=local
APP_MODULE=gaia.api.app:socket_app
WORKERS=1

# Storage paths (local development)
CAMPAIGN_STORAGE_PATH=/home/gaia/campaign_storage
CAMPAIGN_STORAGE_BOOTSTRAP=lazy
CAMPAIGN_STORAGE_BACKEND=local
IMAGE_STORAGE_PATH=/home/gaia/images
AUDIO_STORAGE_PATH=/home/gaia/audio
CLIENT_AUDIO_BUCKET=/home/gaia/audio/tts

# Database configuration (local)
POSTGRES_HOST=gaia-postgres
POSTGRES_PORT=5432
POSTGRES_DB=gaia
POSTGRES_USER=gaia
POSTGRES_PASSWORD=your_local_dev_password
REQUIRE_DATABASE_ON_STARTUP=false

# CORS/WS allowlist for local dev
WS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173

# Auth0 configuration (get from Auth0 dashboard)
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://your-api-identifier
AUTH0_CLIENT_ID=your-client-id
AUTH_AUTO_PROVISION_USERS=true

# Email configuration
EMAIL_PROVIDER=console
SMTP_PORT=2525
EMAIL_FROM_ADDRESS=admin@example.com
EMAIL_FROM_NAME=Your App Admin

# Frontend URL
FRONTEND_URL=http://localhost:3000
FRONTEND_PATH=/home/gaia/frontend

# Admin configuration
PRIMARY_ADMIN_EMAIL=admin@example.com

# Cookie configuration for dev (HTTP)
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# Feature flags
STREAMING_ENABLED=true
AUTO_TTS_ENABLED=false
AUTO_GENERATE_IMAGES=false
